{
    "manifest_version": 2,
    "name": "timetab",
    "short_name": "React App",
    "description": "Time tab",
    "version": "0.0.1",
    "chrome_url_overrides" : {
        "newtab": "index.html"
    },
    "browser_action": {
        "default_icon": "favicon-32x32.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_security_policy": "script-src 'self' 'unsafe-inline' https://www.google-analytics.com https://www.googletagmanager.com; object-src 'self';",
    "permissions": [
        "activeTab",
        "storage",
        "geolocation",
        "https://ajax.googleapis.com/",
        "https://fonts.googleapis.com/"
    ]
}